<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eddymalou.iut_project.Login"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :"
            android:id="@+id/textView5"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleRecipe" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingrédient"
            android:id="@+id/textView6"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Quantité"
            android:id="@+id/textView7"
            android:layout_marginLeft="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mesure"
            android:id="@+id/textView8"
            android:layout_marginLeft="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/spinner1"
            android:layout_weight="0.48"
            android:spinnerMode="dropdown"
            android:enabled="false"
            android:clickable="false" />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantite1"
            android:enabled="false"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesure1"
            android:layout_weight="0.53"
            android:enabled="false" />

        <CheckBox
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1"
            android:layout_marginRight="3dp"
            android:checked="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/spinner2"
            android:layout_weight="0.48"
            android:spinnerMode="dropdown"
            android:focusable="false"
            android:enabled="false"
            />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantite2"
            android:enabled="false"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesure2"
            android:layout_weight="0.53"
            android:enabled="false"
            />

        <CheckBox
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_marginRight="3dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/spinner3"
            android:layout_weight="0.48"
            android:focusable="false"
            android:spinnerMode="dropdown"
            android:enabled="false"
            />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantite3"
            android:enabled="false"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesure3"
            android:layout_weight="0.53"
            android:enabled="false"
            />

        <CheckBox
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:layout_marginRight="3dp"
            android:checked="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/spinner4"
            android:layout_weight="0.48"
            android:spinnerMode="dropdown"
            android:focusable="false"
            android:enabled="false"
            />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantite4"
            android:enabled="false"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesure4"
            android:layout_weight="0.53"
            android:enabled="false"
            />

        <CheckBox
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"

            android:layout_marginRight="3dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/spinner5"
            android:layout_weight="0.48"
            android:enabled="false"
            android:focusable="false"
            android:spinnerMode="dropdown" />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantite5"
            android:enabled="false"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesure5"
            android:enabled="false"
            android:layout_weight="0.53" />

        <CheckBox
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:layout_marginRight="3dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Image URL :"
        android:id="@+id/textView9" />

    <EditText
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:id="@+id/url"
        android:layout_weight="0.84" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter Recette"
        android:id="@+id/button4"
        android:onClick="addRecipe"
        android:layout_gravity="center_horizontal" />


</LinearLayout>